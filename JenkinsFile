pipeline {
    agent any
    stages {

        stage("Build") {
            steps {
                script {
                    // Build the Go application
                    sh """
                        cd /var/jenkins_home/workspace/go-web-app
                        rm -rf main 
                        go build -o main
                    """
                }
            }
        }

        stage("Run Application") {
            steps {
                script {
                    // Run the built Go application
                    sh """
                        docker ps
                        ./main
                    """
                }
            }
        }

        stage("Test") {
            steps {
                script {
                    // Add your test commands here
                    echo "Running tests"
                }
            }
        }

        stage("Push") {
            steps {
                script {
                    // Add your image push commands here
                    docker ps
                }
            }
        }
    }
}
