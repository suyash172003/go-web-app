pipeline {
    agent any
    stages {

        stage("Clone Repository") {
            steps {
                script {
                    // Clone the repository
                    sh """
                        mkdir -p go-web-app
                        cd go-web-app
                        git clone https://github.com/suyash172003/go-web-app.git .
                    """
                }
            }
        }

        stage("Build") {
            steps {
                script {
                    // Build the Go application
                    sh """
                        cd go-web-app
                        go build -o main
                    """
                }
            }
        }

        stage("Run Application") {
            steps {
                script {
                    // Run the built Go application
                    sh """
                        cd go-web-app
                        ./main &
                    """
                }
            }
        }

        stage("Test") {
            steps {
                script {
                    // Add your test commands here
                    echo "Running tests"
                }
            }
        }

        stage("Push") {
            steps {
                script {
                    // Add your image push commands here
                    echo "Pushing Docker images"
                }
            }
        }
    }
}
