pipeline {
    agent {
        docker {
            image 'golang:1.20' 
            args '-v /var/run/docker.sock:/var/run/docker.sock' 
        }
    }
    stages {
        stage("Build") {
            steps {
                script {
                    // Build the Go application
                    sh """
                        go mod tidy
                        go build -o main
                    """
                }
            }
        }

        stage("Build and Push Docker Image") {
            steps {
                script {
                    // Build and push the Docker image
                    sh """
                        docker build -t suyash172003/go-web-app:v1 .
                        docker push suyash172003/go-web-app:v1
                    """
                }
            }
        }

        stage("Test") {
            steps {
                script {
                    // Add your test commands here
                    echo "Running tests"
                }
            }
        }
    }
}
